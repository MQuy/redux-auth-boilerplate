{
  "compilerOptions": {
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "allowJS": true,
    "strict": true,
    "lib": [ "es6", "dom" ],
    "baseUrl": "./src",
    "paths": {
      "$root/*": ["./*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "files": [
    "declaration.d.ts"
  ],
 "exclude": [
    "node_modules"
  ]
}
